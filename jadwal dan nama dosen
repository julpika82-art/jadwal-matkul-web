    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        h2 {
            text-align: center;
        }

        input, select {
            padding: 8px;
            margin: 5px 0;
            width: 90%;
            max-width: 250px;
        }

        button {
            padding: 8px 12px;
            margin-top: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 15px;
        }

        table, th, td {
            border: 1px solid #444;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        /* Responsif untuk HP */
        @media (max-width: 600px) {
            input, select {
                width: 100%;
            }

            table {
                font-size: 14px;
            }

            th, td {
                padding: 7px;
            }
        }

        .section {
            margin-bottom: 40px;
        }
    </style>
